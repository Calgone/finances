{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('calendar') }}
    <script>

        $(() => {
            $('#form_search').submit(function (e) {
                e.preventDefault();
                let data = $(this).serialize();
                $.ajax({
                    url: '{{ path('stock.search') }}',
                    type: 'post',
                    data: data,
                    success: function (response) {
                        console.log(response);
                    }
                })
            });

            $('#search').easyAutocomplete({
                url: function(term) { return '{{ path('stock.local.search') }}'; },
                // data: {name: $('#search').val()},
                getValue: function (element) {
                    return element.name;
                },
                minCharNumber: 3,
                // getValue: 'name',
                ajaxSettings: {
                    dataType: "json",
                    method: "POST",
                    data: {
                        dataType: "json"
                    }
                },
                preparePostData: function (data) {
                    data.term = $('#search').val();
                    return data;
                },
                requestDelay: 400,
                list: {
                    onClickEvent: function() {
                        let id = $('#search').getSelectedItemData().id;
                        // console.log(value);
                        location.replace('/bourse/stock/' + id + '/detail');
                    }
                },
                theme: 'bootstrap'
            });
        });
    </script>
{% endblock javascripts %}